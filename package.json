{
  "name": "gulgle-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts"
  ],
  "scripts": {
    "biome:check": "biome check .",
    "biome:write": "biome check . --write",
    "biome:ci": "biome ci .",
    "typecheck": "bun run --filter '*' typecheck",
    "update-bangs": "bun run ./scripts/update-bangs.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.9.1",
    "typescript": "~5.7.3"
  },
  "packageManager": "bun@1.3.0"
}
